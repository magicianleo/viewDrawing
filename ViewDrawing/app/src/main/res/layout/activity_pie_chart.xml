<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:dividerPadding="30dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.PieChartActivity">

    <com.zhaoys.viewdrawing.custom.piechart.ProportionPieChart
        android:id="@+id/pieChart1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:innerStrokeWidth="1.5dp"
        app:outerStrokeWidth="6dp"
        app:ringSpc="2dp" />

    <com.zhaoys.viewdrawing.custom.piechart.ProportionPieChart
        android:id="@+id/pieChart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:innerStrokeWidth="1.5dp"
        app:outerStrokeWidth="6dp"
        app:ringSpc="2dp" />

    <com.zhaoys.viewdrawing.custom.piechart.ProportionPieChart
        android:id="@+id/pieChart3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="150dp"
        app:innerStrokeWidth="1.5dp"
        app:outerStrokeWidth="6dp"
        app:ringSpc="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.zhaoys.viewdrawing.custom.piechart.ProportionPieChart
            android:id="@+id/pieChart4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:innerStrokeWidth="1.5dp"
            app:outerStrokeWidth="6dp"
            app:ringSpc="2dp" />
    </LinearLayout>
</LinearLayout>
